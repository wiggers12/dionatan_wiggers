// sw.js
// ===============================================
// ⚡ Service Worker principal do PWA
// Atualiza sempre para a versão mais nova
// ===============================================

self.addEventListener("install", () => {
    self.skipWaiting();
});

self.addEventListener("activate", () => {
    clients.claim();
});

// Todas requisições → buscar versão nova
self.addEventListener("fetch", (event) => {
    event.respondWith(fetch(event.request));
});
